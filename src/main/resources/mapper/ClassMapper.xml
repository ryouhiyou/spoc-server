<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.spoc.mapper.ClassMapper">

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO sys_class (class_name, teacher_id)
        VALUES (#{className}, #{teacherId})
    </insert>

    <select id="selectAll" resultType="com.spoc.entity.ClassInfo">
        SELECT * FROM sys_class ORDER BY create_time DESC
    </select>

    <delete id="deleteById">
        DELETE FROM sys_class WHERE id = #{id}
    </delete>

    <update id="update">
        UPDATE sys_class
        SET class_name = #{className}
        WHERE id = #{id}
    </update>

    <select id="selectById" resultType="com.spoc.entity.ClassInfo">
        SELECT * FROM sys_class WHERE id = #{id}
    </select>

    <insert id="assignCourse">
        INSERT IGNORE INTO sys_class_course (class_id, course_id)
        VALUES (#{classId}, #{courseId})
    </insert>

</mapper>